<%- include("header.ejs") %>
<body>


    <section class="vh-100 gradient-custom">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col col-xl-10">
            
            <div class="card">
              <div class="card-body p-5">
                <h1><%= title%>'s list</h1>
    
                <form method="post" action='/' class="d-flex justify-content-center align-items-center mb-4">
                  <div class="form-outline flex-fill">
                    <input type="text" id="form2" name="additem" class="form-control" autocomplete="off"/>
                    <label class="form-label" for="form2">New task...</label>
                  </div>
                  <button type="submit" name=list value=<%= title %> class="addbtn btn btn-info ms-2">Add</button>
                </form>
    
                <!-- Tabs navs -->
                <ul class="nav nav-tabs mb-4 pb-2" id="ex1" role="tablist">
                  <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="ex1-tab-1" data-mdb-toggle="tab" href="/" role="tab"
                      aria-controls="ex1-tabs-1" aria-selected="true">Today</a>
                  </li>
                  <li class="nav-item" role="presentation">
                    <a class="nav-link" id="ex1-tab-2" data-mdb-toggle="tab" href="/work" role="tab"
                      aria-controls="ex1-tabs-2" aria-selected="false">Work</a>
                  </li>
                  <li class="nav-item" role="presentation">
                    <a class="nav-link" id="ex1-tab-3" data-mdb-toggle="tab" href="/completed" role="tab"
                      aria-controls="ex1-tabs-3" aria-selected="false"></a>
                  </li>
                </ul>
                <!-- Tabs navs -->
    
                <!-- Tabs content -->
                <div class="tab-content" id="ex1-content">
                  <div class="tab-pane fade show active" id="ex1-tabs-1" role="tabpanel"
                    aria-labelledby="ex1-tab-1">
                    <ul class="list-group mb-0">


                      <% list.forEach((e)=>{ %>
                        <div class="d-flex align-items-center  ">
                          <input class="form-check-input me-2 mb-2" type="checkbox" value="" aria-label="..." />
                          <p class=" item list-group-item d-flex align-items-center border-0 mb-2 rounded "
                          style="background-color: #f4f6f7;">
                          <%=e%>
                        </p>

                        </div>
                       
                      <%})%>
                      

                    
                    </ul>
                  </div>
                  
                <!-- Tabs content -->
    
              </div>
            </div>
    
          </div>
        </div>
      </div>
    </section>
 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>

<%- include("footer.ejs") %>